{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"sourceMap": true,
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
